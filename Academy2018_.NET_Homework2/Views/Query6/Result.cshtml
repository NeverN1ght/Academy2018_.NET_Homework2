@model SearchViewModel<PostStructureDTO>

@{
    ViewData["Title"] = "Result";
    ViewData["CurrentQuery"] = "6";
}

<div id="queries" class="col-xs-3">
    @Html.Partial("QueriesPartial")
</div>
<div class="col-xs-8">
    @using (Html.BeginForm("Result", "Query6", FormMethod.Post))
    {
        @Html.LabelFor(m => m.Id);
        @Html.TextBoxFor(x => x.Id);
        @Html.ValidationMessageFor(m => m.Id, "");

        <br />
        <input type="submit" class="btn btn-success" value="Search" />
    }

    @if (Model.IsDataExist)
    {
        if (Model.Result != null)
        {
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Result.Post.Title</td>
                    </tr>
                </tbody>
            </table>
        }
    }
    else
    {
        <h3>Нет данных</h3>
    }
</div>

